{
  "name": "devsu-website-2021",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "format": "prettier --config .prettierrc './**/*.{ts,tsx,css,json}' --write",
    "lint": "eslint ./",
    "lint:fix": "npm run lint --fix",
    "validate": "npm run format && npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css}": [
      "npm run format",
      "npm run lint:fix",
      "git add"
    ]
  },
  "dependencies": {
    "next": "^10.0.3",
    "next-routes": "^1.4.2",
    "prismic-dom": "^2.1.0",
    "prismic-javascript": "^2.7.1",
    "prismic-reactjs": "^1.3.3",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.21",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "prettier": "2.2.1",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": "12.14.x"
  }
}
